<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/assessmentCompletedSide">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white2"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-37dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/button_color2"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/btnExit"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/button_color2"
                android:src="@drawable/baseline_arrow_left_24" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="List Assessment Completed"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingRight="84dp"
                />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvAssessmentCompleted"
            android:layout_width="match_parent"
            android:layout_height="570dp" />
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="130dp"
            >
            <Button
                android:id="@+id/btnReview"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:text="Reload"
                android:textAlignment="center"
                android:backgroundTint="@color/green4"/>
        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
