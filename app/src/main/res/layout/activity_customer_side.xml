<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/customerSide">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green2"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-37dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/green5"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/green5"
                android:src="@drawable/baseline_arrow_left_24" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="Customer side"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="142dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"

                android:paddingLeft="20dp"
                android:text="Name"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="142dp"
                android:layout_height="37dp"
                android:paddingLeft="20dp"
                android:text="Phone"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:inputType="text"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="142dp"
                android:layout_height="37dp"
                android:paddingLeft="20dp"
                android:text="Product name"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etProductName"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:textColor="@color/borderColor"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="142dp"
                android:layout_height="37dp"
                android:paddingLeft="20dp"
                android:text="Case"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etCase"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:textColor="@color/borderColor"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="142dp"
                android:layout_height="37dp"
                android:paddingLeft="20dp"
                android:text="Date"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etPurchasedDate"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:textColor="@color/borderColor"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="142dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Battery"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etBattery"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="142dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Describe"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etDescribe"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                />


        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="130dp"
            >
            <Button
                android:id="@+id/btnSave"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:text="Send"
                android:textAlignment="center"
                android:backgroundTint="@color/green4"
                android:textSize="30dp"/>
        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
